{
	// See https://go.microsoft.com/fwlink/?LinkId=733558 
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${file}",
				"-O3",
//				"-std=c++20",
//				"-fsanitize=thread",
//				"-pthread",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-mlzcnt",
				"-Wall"
//				,"-lboost_system"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"dependsOrder": "sequence"
		}
	]
}